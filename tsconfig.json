{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "rootDirs": [
        "./src"
      ],
      "esModuleInterop": true,
      "noImplicitAny": false
    },
    "exclude": [
      "dist",
      "node_modules"
    ],
    "include": [
      "./src"
    ]
  }